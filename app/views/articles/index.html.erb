<h1>Articles</h1>

<div id="articles">
  <% @articles.each do |article| %>
    <%= 'Created by: ' %><%=  article.user.name.capitalize %>
    <p>
      <%= link_to article.title.capitalize, article %>
    </p>
  <% end %>
</div>

<% if user_signed_in? %>
  <div><br />
    <%= link_to "New article", new_article_path %>
  </div>
<% end %>
